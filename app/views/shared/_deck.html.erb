<div class="row row-cols-1 row-cols-md-2">
<% @todos.each do |todo| %>
  <div class="col mb-4 ">
    <div class="card">
      <div class="card-body card-bg">
        <h4 class="card-title text-light font-weight-bold"><%= todo.description %></h4>
        <% if todo.completed == true %>
        <%=link_to "COMPLETED" , todos_complete_path(todo),class:'btn btn-outline-success' %>
        <% else %>
        <%=link_to "UNFINISHED", todos_complete_path(todo),class: 'btn btn-outline-warning' %>
        <%end%>
        <hr id="card-line">
        <%= link_to "Edit", edit_todo_path(todo), class: "btn btn-warning" %>
        <%= link_to "Show", todo_path(todo), class: "btn btn-success" %>
        <%= link_to "Delete", todo_path(todo), class:"btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>
<% end %>
</div>